@model ShumenNews.Models.BindingModels.ArticleCreateBindingModel
@{
    ViewData["Title"] = "Добави статия";
}
<h1 class="text-center">Добави нова статия</h1>
<form method="post" enctype="multipart/form-data" class="form form-control col-md-4 color-2 row">
    <div class="form-group">
        <label asp-for="Title" class="my-1">Заглавие на статията:</label>
        <input type="text" asp-for="Title" class="w-100 text-center" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="my-1">Текст на статията:</label>
        <textarea asp-for="Content" rows="10" class="w-100"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between my-3">
        <div class="d-inline">
            <label asp-for="CategoryId">Избери категория:</label>
            <select asp-for="CategoryId" class="btn btn-success" style="height: 40px" asp-items="@Model.Categories">
                <option disabled>Категории</option>
            </select>
            <span asp-validation-for="Categories" class="text-danger"></span>
        </div>
        <div class="d-inline">
            <label asp-for="Images" class="my-1">Добави снимки:</label>
            <input asp-for="Images" class="border border-success shadow p-1 bg-body-tertiary rounded" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="btn btn-success m-0"><span>Потребител: @User.Identity!.Name</span></div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" value="Добави статия" class="btn btn-primary my-2 w-25" />
    </div>
</form>
