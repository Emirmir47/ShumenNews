@using Microsoft.AspNetCore.Identity
@using ShumenNews.Data.Models
@inject SignInManager<ShumenNewsUser> SignInManager
@inject UserManager<ShumenNewsUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <b class="primary-color">@User.Identity?.Name</b>
        </li>
        <li class="nav-item pt-1">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-house-user primary-color"></i> Профил</a>
        </li>
        <li class="nav-item pt-1">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-right-from-bracket primary-color"></i> Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
