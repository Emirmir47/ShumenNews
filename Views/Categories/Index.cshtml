@using ShumenNews.Models.ViewModels
@model CategoryViewModel
<h1>@Model.Name</h1>
<div class="container">
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="card mx-2" style="width: 18rem;">
                <img src="@article.MainImage" class="card-img-top" alt="image" width="250" height="200">
                <div class="card-body">
                    <h5 class="card-title">@article.Title</h5>
                    <h6 class="card-title">
                        @article.PublishedOn.ToString("MM/dd/yyyy")
                        | харесвания @article.LikesCount
                        | преглеждания @article.ViewsCount
                    </h6>
                    <p class="card-text">@article.Content</p>
                    <!--Links-->
                    <a class="btn btn-dark bg-secondary-color bg-gradient text-white" asp-area="" asp-controller="Articles" asp-action="Index" asp-route-id="@article.Id">Прочети</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"><i class="fas fa-edit"></i></a>
                    }
                </div>
            </div>
        }
    </div>
</div>